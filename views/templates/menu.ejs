<style>
    #hamburgerMenu{
        position: fixed;
        top: 10px;
        left: 10px;
        user-select: none;
        cursor: pointer;
    }

    #hamburgerMenu > span {
        background-color: black;
        width: 20px;
        height: 2px;
        display: block;
        user-select: none;
    }

    #hamburgerMenu > span:not(:last-child){
        margin-bottom: 5px;
    }

    #menuContainer {
        background-color: rgba(0, 0, 0, .3);
        width: 100%;
        height: 100vh;
        display: none;
        justify-content: center;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity .3s ease-in-out;
    }

    .menuBox{
        background-color: white;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px;
    }

    .menuBox > a{
        padding: 30px;
        transition: background-color .2s ease-in-out;
        border-radius : 10px;
    }

    .menuBox > a:hover{
        background-color: #ccc;
    }

    #menuContainer-close{
        position: fixed;
        top: 10px;
        right: 10px;
        cursor: pointer;
        user-select: none;
        font-size: 25px;
    }
</style>

<div id="hamburgerMenu">
    <span></span><span></span><span></span>
</div>

<div id="menuContainer" class="<%=(q && q == "menu") ? "df" : ""%>">
    <p id="menuContainer-close">X</p>
    <div class="menuBox">
        <a href="/?list=sabtFaktor">ثبت فاکتور</a>
        <a href="/?list=sabtPardakht">ثبت پرداخت</a>
        <a href="/report">گزارش</a>
        <a href="/shops">افزودن تامین کننده</a>
    </div>
</div>

<script>
    var closeBtn = document.getElementById("menuContainer-close")
    var hamburgerMenu = document.getElementById("hamburgerMenu")
    var menuContainer = document.getElementById("menuContainer")

    closeBtn.addEventListener("click", () => {
        menuContainer.style.opacity = "0"
        setTimeout(() => {
            menuContainer.style.display = "none"
        }, 300);
    })

    hamburgerMenu.addEventListener("click", () => {
        menuContainer.style.display = "flex"
        setTimeout(() => {
            menuContainer.style.opacity = "1"
        }, 10);
    })
</script>